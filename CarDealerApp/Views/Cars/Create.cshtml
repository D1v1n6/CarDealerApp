@model CarDealerApp.Models.Car
@{
    ViewData["Title"] = "Add New Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav><a class="btn btn-secondary" href="/Inquiry/AdminList">View Inquiries</a></nav>
<h2>Add New Car</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-4">
    <div class="mb-3">
        <label>Make</label>
        <input asp-for="Make" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Model</label>
        <input asp-for="Model" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Year</label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Price ($)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label>Car Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Car</button>
</form>
