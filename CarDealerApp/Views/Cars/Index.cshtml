@model IEnumerable<CarDealerApp.Models.Car>
@{
    ViewData["Title"] = "Available Cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Available Cars</h2>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="@car.ImagePath" class="card-img-top" alt="@car.Make @car.Model" style="height:200px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@car.Make @car.Model (@car.Year)</h5>
                    <p class="card-text text-muted">$@car.Price.ToString("N0")</p>
                    <a href="/Cars/Details/@car.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
